<section id="intro-box" class="single-post">
	<div class="container">
    	<div class="row">
        	<div class="span12">
            	<h2 class="entry-title">Съёмка стереопанорамы</h2>
                
                <div class="entry-meta">
                    <span class="author">Алексей Пушкарёв</span>
                    <span class="divider">/</span>
                    <span class="published">30 октября 2013</span>
                </div>
                    
